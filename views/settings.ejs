<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings â€” Invoice Agent</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar">
        <a href="/" class="nav-brand">Invoice Agent</a>
        <div class="nav-links">
            <a href="/">Upload</a>
            <a href="/builder">Template Builder</a>
            <a href="/settings" class="active">Settings</a>
        </div>
    </nav>

    <main class="container">
        <div class="settings-section">
            <h1>Provider Settings</h1>
            <p class="subtitle">Switch AI provider and model on the fly</p>

            <form id="settingsForm">
                <div class="form-group">
                    <label for="providerSelect">Provider</label>
                    <select id="providerSelect" name="provider">
                        <option value="">Loading...</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="modelInput">Model</label>
                    <input type="text" id="modelInput" name="model" placeholder="e.g. gpt-4o">
                    <p class="hint" id="modelHint">Enter the model name for the selected provider</p>
                </div>

                <!-- Model suggestions per provider -->
                <div class="model-suggestions" id="modelSuggestions"></div>

                <button type="submit" class="btn-primary">Save Settings</button>
            </form>

            <div class="status-box" id="statusBox" style="display:none;"></div>

            <!-- Provider reference -->
            <div class="provider-reference">
                <h3>Provider Reference</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Provider</th>
                            <th>Type</th>
                            <th>Example Models</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>openai</td>
                            <td>Official</td>
                            <td>gpt-4o, gpt-4-turbo, gpt-3.5-turbo</td>
                        </tr>
                        <tr>
                            <td>anthropic</td>
                            <td>Official</td>
                            <td>claude-3-5-sonnet-20241022, claude-3-opus-20240229</td>
                        </tr>
                        <tr>
                            <td>google</td>
                            <td>Official</td>
                            <td>gemini-2.5-flash, gemini-2.5-pro, gemini-2.5-flash-lite, gemini-3-flash-preview</td>
                        </tr>
                        <tr>
                            <td>mistral</td>
                            <td>Official</td>
                            <td>mistral-large-latest, mistral-small-latest</td>
                        </tr>
                        <tr>
                            <td>groq</td>
                            <td>Compatible</td>
                            <td>llama-3.3-70b-versatile, mixtral-8x7b-32768</td>
                        </tr>
                        <tr>
                            <td>deepseek</td>
                            <td>Compatible</td>
                            <td>deepseek-chat, deepseek-reasoner</td>
                        </tr>
                        <tr>
                            <td>together</td>
                            <td>Compatible</td>
                            <td>meta-llama/Llama-3-70b-chat-hf</td>
                        </tr>
                        <tr>
                            <td>openrouter</td>
                            <td>Compatible</td>
                            <td>openai/gpt-4o, anthropic/claude-3.5-sonnet</td>
                        </tr>
                        <tr>
                            <td>nvidia</td>
                            <td>Compatible</td>
                            <td>meta/llama-3.3-70b-instruct, microsoft/phi-4</td>
                        </tr>
                        <tr>
                            <td>ollama</td>
                            <td>Local</td>
                            <td>llama3, mistral, qwen2.5</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script src="/js/settings.js"></script>
</body>

</html>